	public static double totalArea(List<? extends Shape> shapes) {  // a lista pode ser de qualquer sub tipo de shape
		double sum = 0.0;
		for (var shape : shapes) {
			sum += shape.area();
		}
		System.out.println("Soma: " + sum);
		return sum;
	}
